<Window x:Class="MultiSql.ConnectServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiSql"
        xmlns:vm="clr-namespace:MultiSql.UserControls.ViewModels"
        mc:Ignorable="d"
        Title="Connect Server" Height="250" MaxHeight="400" MaxWidth="600" 
        MinHeight="250" MinWidth="400" Width="420">

    <Window.DataContext>
        <vm:ConnectServerViewModel />
    </Window.DataContext>
    

    <Grid>
        <ContentControl Content="{Binding SelectedViewModel}" />
    </Grid>
</Window>
